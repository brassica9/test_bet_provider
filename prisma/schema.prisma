generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id String @id @db.VarChar
  coefficient Float
  deadline DateTime
  status String @default("pending")
  bet Bet[]
}

model Bet {
  betId String @id @db.VarChar
  eventId String @db.VarChar
  event Event @relation(fields: [eventId], references: [id])
  amount Float
  potentialWin Float
  status String @default("pending")
}
